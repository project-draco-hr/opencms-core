{
  if (m_highlighting == null) {
    m_highlighting=new CmsHighlightingBorder(CmsPositionBean.getBoundingClientRect(getElement()),isNew() ? CmsHighlightingBorder.BorderColor.blue : CmsHighlightingBorder.BorderColor.red);
    RootPanel.get().add(m_highlighting);
  }
 else {
    m_highlighting.setPosition(CmsPositionBean.getBoundingClientRect(getElement()));
  }
}
