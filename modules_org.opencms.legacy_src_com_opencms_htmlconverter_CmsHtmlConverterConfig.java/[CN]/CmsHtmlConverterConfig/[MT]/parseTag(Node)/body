{
  if (node.getNodeName().equals("#comment")) {
    return "";
  }
  NamedNodeMap attrs=node.getAttributes();
  if (attrs.getLength() < 1) {
    System.err.println("Fatal configuration error: Tag <" + node.getNodeName() + "> has no attributes.");
    System.exit(1);
  }
  String name=attrs.item(0).getNodeName();
  if (name.equalsIgnoreCase("name")) {
    return attrs.item(0).getNodeValue();
  }
  System.err.println("Fatal configuration error: Attribute \"" + name + "\" not recognized in tag <"+ node.getNodeName()+ ">.");
  System.exit(1);
  return "";
}
