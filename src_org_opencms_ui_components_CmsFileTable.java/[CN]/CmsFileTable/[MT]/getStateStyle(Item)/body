{
  String result="";
  if (resourceItem != null) {
    CmsResourceState state=(CmsResourceState)resourceItem.getItemProperty(PROPERTY_STATE).getValue();
    if (state != null) {
      if (state.isDeleted()) {
        result="state-deleted";
      }
 else       if (state.isNew()) {
        result="state-new";
      }
 else       if (state.isChanged()) {
        result="state-changed";
      }
    }
  }
  return result;
}
