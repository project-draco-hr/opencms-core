{
  CmsSearchIndex index=OpenCms.getSearchManager().getIndex(getSettings().getUserSettings().getWorkplaceSearchIndexName());
  List result=new ArrayList();
  Iterator i=index.getFieldConfiguration().getFields().iterator();
  while (i.hasNext()) {
    CmsSearchField field=(CmsSearchField)i.next();
    if (field.isIndexed() && field.isDisplayed()) {
      result.add(field);
    }
  }
  return result;
}
