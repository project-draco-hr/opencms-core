{
  super.start();
  Scheduler.get().scheduleFixedDelay(new RepeatingCommand(){
    public boolean execute(){
      if (!getPropertyPanel().getTabPanel().isAttached() || !getPropertyPanel().getTabPanel().isVisible()) {
        return false;
      }
      updateHeight();
      return true;
    }
  }
,UPDATE_HEIGHT_INTERVAL);
}
