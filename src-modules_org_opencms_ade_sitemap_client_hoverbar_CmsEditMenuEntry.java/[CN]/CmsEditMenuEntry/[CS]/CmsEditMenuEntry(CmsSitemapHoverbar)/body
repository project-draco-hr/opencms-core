{
  super(hoverbar);
  setImageClass(I_CmsImageBundle.INSTANCE.contextMenuIcons().edit());
  setLabel(Messages.get().key(Messages.GUI_HOVERBAR_EDIT_0));
  setActive(true);
  setCommand(new Command(){
    /** 
 * @see com.google.gwt.user.client.Command#execute()
 */
    public void execute(){
      CmsSitemapController controller=getHoverbar().getController();
      CmsClientSitemapEntry entry=controller.getEntry(getHoverbar().getSitePath());
      I_CmsSitemapEntryEditorHandler handler=new CmsEditEntryHandler(controller,entry,CmsSitemapView.getInstance().isNavigationMode());
      A_CmsSitemapEntryEditor editor=createEntryEditor(handler);
      editor.start();
    }
  }
);
}
