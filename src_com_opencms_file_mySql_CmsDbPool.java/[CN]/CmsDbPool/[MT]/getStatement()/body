{
  int k=(int)(Math.random() * m_maxConn);
  if (k == m_maxConn) {
    k--;
  }
  Statement statement;
  try {
    Connection conn=(Connection)m_connections.elementAt(k);
    statement=conn.createStatement();
  }
 catch (  SQLException e) {
    throw new CmsException(CmsException.C_SQL_ERROR,e);
  }
  return statement;
}
