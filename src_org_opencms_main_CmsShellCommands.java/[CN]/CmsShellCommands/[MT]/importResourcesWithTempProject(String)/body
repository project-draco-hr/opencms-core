{
  try {
    CmsProject project=m_cms.createProject("SystemUpdate","A temporary project for a system update",OpenCms.getDefaultUsers().getGroupAdministrators(),OpenCms.getDefaultUsers().getGroupAdministrators(),I_CmsConstants.C_PROJECT_TYPE_TEMPORARY);
    int id=project.getId();
    m_cms.getRequestContext().setCurrentProject(id);
    m_cms.copyResourceToProject(I_CmsConstants.C_ROOT);
    m_cms.importResources(importFile,I_CmsConstants.C_ROOT);
    m_cms.unlockProject(id);
    m_cms.publishProject();
  }
 catch (  Exception exc) {
    CmsShell.printException(exc);
  }
}
