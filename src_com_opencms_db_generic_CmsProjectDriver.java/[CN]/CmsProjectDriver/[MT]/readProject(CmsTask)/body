{
  PreparedStatement stmt=null;
  CmsProject project=null;
  ResultSet res=null;
  Connection conn=null;
  try {
    conn=m_sqlManager.getConnection();
    stmt=m_sqlManager.getPreparedStatement(conn,"C_PROJECTS_READ_BYTASK");
    stmt.setInt(1,task.getId());
    res=stmt.executeQuery();
    if (res.next())     project=new CmsProject(res,m_sqlManager);
 else     throw new CmsException("[" + this.getClass().getName() + "] "+ task,CmsException.C_NOT_FOUND);
  }
 catch (  SQLException e) {
    throw m_sqlManager.getCmsException(this,"readProject(CmsTask)",CmsException.C_SQL_ERROR,e);
  }
 finally {
    m_sqlManager.closeAll(conn,stmt,res);
  }
  return project;
}
