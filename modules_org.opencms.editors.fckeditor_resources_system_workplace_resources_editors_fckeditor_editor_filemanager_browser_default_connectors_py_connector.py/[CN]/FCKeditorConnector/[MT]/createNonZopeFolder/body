def createNonZopeFolder(self, resourceType, currentFolder):
    errorNo = 0
    errorMsg = ''
    if self.request.has_key('NewFolderName'):
        newFolder = self.request.get('NewFolderName', None)
        currentFolderPath = self.serverMapFolder(resourceType, currentFolder)
        try:
            newFolderPath = (currentFolderPath + newFolder)
            errorMsg = self.createServerFolder(newFolderPath)
            if (errorMsg is not None):
                errorNo = 110
        except:
            errorNo = 103
    else:
        errorNo = 102
    error = ('<Error number="%s" originalDescription="%s" />' % (errorNo, self.convertToXmlAttribute(errorMsg)))
    return error
