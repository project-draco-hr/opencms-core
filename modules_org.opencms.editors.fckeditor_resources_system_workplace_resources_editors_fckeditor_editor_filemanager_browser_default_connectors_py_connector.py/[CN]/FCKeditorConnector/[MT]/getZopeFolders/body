def getZopeFolders(self, resourceType, currentFolder):
    s = ''
    s += '<Folders>'
    zopeFolder = self.findZopeFolder(resourceType, currentFolder)
    for (name, o) in zopeFolder.objectItems(['Folder']):
        s += ('<Folder name="%s" />' % self.convertToXmlAttribute(name))
    s += '</Folders>'
    return s
