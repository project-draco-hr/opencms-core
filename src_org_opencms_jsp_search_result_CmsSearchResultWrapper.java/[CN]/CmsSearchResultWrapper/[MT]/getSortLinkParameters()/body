{
  if (m_sortLinks == null) {
    m_sortLinks=CmsCollectionsGenericWrapper.createLazyMap(new Transformer(){
      @Override public Object transform(      final Object sortOption){
        final Map<String,String[]> parameters=new HashMap<String,String[]>();
        m_controller.addParametersForCurrentState(parameters);
        parameters.put(m_controller.getSorting().getConfig().getSortParam(),new String[]{(String)sortOption});
        return paramMapToString(parameters);
      }
    }
);
  }
  return m_sortLinks;
}
