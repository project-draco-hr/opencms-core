{
  if (siteRoot == null) {
    return isSecureLink(cms,vfsName);
  }
  String storedSiteRoot=cms.getRequestContext().getSiteRoot();
  try {
    cms.getRequestContext().setSiteRoot(siteRoot);
    return isSecureLink(cms,vfsName);
  }
  finally {
    cms.getRequestContext().setSiteRoot(storedSiteRoot);
  }
}
