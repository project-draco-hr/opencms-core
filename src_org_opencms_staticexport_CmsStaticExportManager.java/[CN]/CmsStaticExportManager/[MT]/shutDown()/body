{
  int count=0;
  while ((count < C_HANDLER_FINISH_TIME) && m_handler.isBusy()) {
    count++;
    try {
      if (OpenCms.getLog(CmsLog.CHANNEL_INIT).isInfoEnabled()) {
        OpenCms.getLog(CmsLog.CHANNEL_INIT).info(". Shutting down        : Waiting for static export handler " + m_handler.getClass().getName() + " to finish ("+ count+ "/"+ C_HANDLER_FINISH_TIME+ ")");
      }
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      count=C_HANDLER_FINISH_TIME;
    }
  }
  if (CmsLog.LOG.isInfoEnabled()) {
    CmsLog.LOG.info(Messages.get().key(Messages.INIT_SHUTDOWN_1,this.getClass().getName()));
  }
}
