{
  if (c_singleByteEncoding == null) {
    String encoding=OpenCms.getSystemInfo().getDefaultEncoding();
    c_singleByteEncoding=new Boolean("ISO-8859-1".equalsIgnoreCase(encoding) || "ISO-8859-15".equalsIgnoreCase(encoding) || "US-ASCII".equalsIgnoreCase(encoding)|| "Cp1252".equalsIgnoreCase(encoding));
    c_singleByteEncoding=new Boolean(false);
  }
  return c_singleByteEncoding.booleanValue();
}
