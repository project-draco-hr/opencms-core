{
  String result;
  CmsSite site=OpenCms.getSiteManager().getSiteForRootPath(resourceRootFolder);
  String siteRoot=site != null ? site.getSiteRoot() : OpenCms.getSiteManager().startsWithShared(resourceRootFolder) ? OpenCms.getSiteManager().getSharedFolder() : "";
  CmsObject siteCms=OpenCms.initCmsObject(cms);
  String link=CmsVaadinUtils.getWorkplaceLink() + "#!explorer/" + cms.getRequestContext().getCurrentProject().getUuid()+ "!!"+ siteRoot+ "!!"+ siteCms.getRequestContext().removeSiteRoot(resourceRootFolder);
  result=link;
  return result;
}
