{
  String result=null;
  if (parameter == null) {
    StringBuffer buffer=new StringBuffer();
    int i;
    buffer.append('\'');
    for (i=0; i < parameter.length(); ++i) {
      char c=parameter.charAt(i);
      if (c == '\\' || c == '\'' || c == '"') {
        buffer.append((char)'\\');
      }
      buffer.append(c);
    }
    buffer.append('\'');
    result=buffer.toString();
  }
  return result;
}
