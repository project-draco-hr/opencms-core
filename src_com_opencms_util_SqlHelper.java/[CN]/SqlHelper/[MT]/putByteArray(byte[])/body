{
  ByteArrayOutputStream BytesOut=new ByteArrayOutputStream();
  int size=parameter.length;
  BytesOut.write('\'');
  for (int i=0; i < size; i++) {
    byte b=parameter[i];
    if (b == '\0') {
      BytesOut.write('\\');
      BytesOut.write('0');
    }
 else {
      if (b == '\\' || b == '\'' || b == '"') {
        BytesOut.write('\\');
      }
      BytesOut.write(b);
    }
  }
  BytesOut.write('\'');
  return new String(BytesOut.toByteArray());
}
