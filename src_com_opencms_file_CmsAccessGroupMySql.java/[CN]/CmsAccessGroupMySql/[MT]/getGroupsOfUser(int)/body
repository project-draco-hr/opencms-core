{
  A_CmsGroup group;
  Vector groups=new Vector();
  ResultSet res=null;
  try {
    Statement s=m_Con.createStatement();
    s.setEscapeProcessing(false);
    res=s.executeQuery("SELECT GROUPS.* FROM GROUPS,GROUPUSERS WHERE USER_ID = " + userid + " AND GROUPS.GROUP_ID = GROUPUSERS.GROUP_ID");
    while (res.next()) {
      group=new CmsGroup(res.getInt(C_GROUP_ID),res.getInt(C_PARENT_GROUP_ID),res.getString(C_GROUP_NAME),res.getString(C_GROUP_DESCRIPTION),res.getInt(C_GROUP_FLAGS));
      groups.addElement(group);
    }
  }
 catch (  SQLException e) {
    throw new CmsException("[CmsAccessGroupMySql/getGroupsOfUser(id)]:" + e.getMessage(),CmsException.C_SQL_ERROR,e);
  }
  return groups;
}
