{
  A_CmsGroup group;
  Vector groups=new Vector();
  ResultSet res=null;
  try {
    PreparedStatement statementGetGroupsOfUser=m_Con.prepareStatement(C_GETGROUPSOFUSER);
    statementGetGroupsOfUser.setInt(1,userid);
    res=statementGetGroupsOfUser.executeQuery();
    while (res.next()) {
      group=new CmsGroup(res.getInt(C_GROUP_ID),res.getInt(C_PARENT_GROUP_ID),res.getString(C_GROUP_NAME),res.getString(C_GROUP_DESCRIPTION),res.getInt(C_GROUP_FLAGS));
      groups.addElement(group);
    }
  }
 catch (  SQLException e) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ e.getMessage(),CmsException.C_SQL_ERROR,e);
  }
  return groups;
}
