{
  A_CmsGroup group=null;
  try {
    PreparedStatement s=getConnection().prepareStatement(C_GROUP_READID);
    s.setEscapeProcessing(false);
    s.setInt(1,id);
    ResultSet res=s.executeQuery();
    if (res.next()) {
      group=new CmsGroup(res.getInt(C_GROUP_ID),res.getInt(C_PARENT_GROUP_ID),res.getString(C_GROUP_NAME),res.getString(C_GROUP_DESCRIPTION),res.getInt(C_GROUP_FLAGS));
    }
  }
 catch (  SQLException e) {
    throw new CmsException(CmsException.C_SQL_ERROR,e);
  }
  return group;
}
