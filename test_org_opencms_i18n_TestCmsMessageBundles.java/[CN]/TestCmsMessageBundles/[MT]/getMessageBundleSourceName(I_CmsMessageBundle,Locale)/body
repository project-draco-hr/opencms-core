{
  if (Locale.ENGLISH.equals(locale)) {
    return bundle.getBundleName();
  }
  String fileName=CmsStringUtil.substitute(bundle.getBundleName(),".","/") + "_" + locale.toString()+ ".properties";
  String source=SOURCE_FOLDER_PREFIX + locale.toString() + SOURCE_FOLDER_INFIX+ locale.toString()+ SOURCE_FOLDER_SUFFIX+ fileName;
  if (!new File(source).canRead()) {
    source=getModuleMessagesBundleSourceName(bundle,locale);
  }
  return source;
}
