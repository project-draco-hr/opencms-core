{
  if (Locale.ENGLISH.equals(locale)) {
    return bundle.getBundleName();
  }
  String packageName=bundle.getBundleName().substring(0,bundle.getBundleName().lastIndexOf('.'));
  packageName+="/";
  String source="modules/" + packageName + "resources/system/modules/"+ packageName+ "classes/"+ CmsStringUtil.substitute(bundle.getBundleName(),".","/")+ "_"+ locale.toString()+ ".properties";
  return source;
}
