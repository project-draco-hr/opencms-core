{
  CmsConfirmDialog dialog=new CmsConfirmDialog(Messages.get().key(Messages.GUI_CONFIRM_DELETE_LOCALE_TITLE_0),Messages.get().key(Messages.GUI_CONFIRM_DELETE_LOCALE_TEXT_0));
  dialog.setHandler(new I_CmsConfirmDialogHandler(){
    public void onClose(){
    }
    public void onOk(){
      deleteCurrentLocale();
    }
  }
);
  dialog.center();
}
