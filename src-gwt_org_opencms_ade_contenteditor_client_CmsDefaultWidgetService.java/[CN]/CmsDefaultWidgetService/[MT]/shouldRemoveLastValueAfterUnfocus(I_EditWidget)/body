{
  if (widget instanceof FormWidgetWrapper) {
    widget=((FormWidgetWrapper)widget).getEditWidget();
  }
  if ((widget instanceof CmsTextareaWidget) || (widget instanceof CmsTextboxWidget) || (widget instanceof TinyMCEWidget)) {
    String value=widget.getValue();
    if (" ".equals(value)) {
      return false;
    }
    return CmsStringUtil.isEmptyOrWhitespaceOnly(value);
  }
  return false;
}
