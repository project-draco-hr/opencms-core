{
  CmsPropertydefinition propertyDefinition=null;
  name=name.trim();
  validFilename(name);
  try {
    try {
      propertyDefinition=m_vfsDriver.readPropertyDefinition(runtimeInfo,name,context.currentProject().getId());
    }
 catch (    CmsException e) {
      propertyDefinition=m_vfsDriver.createPropertyDefinition(runtimeInfo,context.currentProject().getId(),name);
    }
    try {
      m_vfsDriver.readPropertyDefinition(runtimeInfo,name,I_CmsConstants.C_PROJECT_ONLINE_ID);
    }
 catch (    CmsException e) {
      m_vfsDriver.createPropertyDefinition(runtimeInfo,I_CmsConstants.C_PROJECT_ONLINE_ID,name);
    }
    try {
      m_backupDriver.readBackupPropertyDefinition(runtimeInfo,name);
    }
 catch (    CmsException e) {
      m_backupDriver.createBackupPropertyDefinition(runtimeInfo,name);
    }
  }
  finally {
    OpenCms.fireCmsEvent(new CmsEvent(I_CmsEventListener.EVENT_PROPERTY_DEFINITION_CREATED,Collections.singletonMap("propertyDefinition",propertyDefinition)));
  }
  return propertyDefinition;
}
