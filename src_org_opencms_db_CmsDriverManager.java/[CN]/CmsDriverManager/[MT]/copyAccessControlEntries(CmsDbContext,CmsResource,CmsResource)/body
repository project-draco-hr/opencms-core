{
  ListIterator aceList=m_userDriver.readAccessControlEntries(dbc,dbc.currentProject(),source.getResourceId(),false).listIterator();
  m_userDriver.removeAccessControlEntries(dbc,dbc.currentProject(),destination.getResourceId());
  while (aceList.hasNext()) {
    CmsAccessControlEntry ace=(CmsAccessControlEntry)aceList.next();
    m_userDriver.createAccessControlEntry(dbc,dbc.currentProject(),destination.getResourceId(),ace.getPrincipal(),ace.getPermissions().getAllowedPermissions(),ace.getPermissions().getDeniedPermissions(),ace.getFlags());
  }
  touch(dbc,destination,CmsResource.TOUCH_DATE_UNCHANGED,CmsResource.TOUCH_DATE_UNCHANGED,CmsResource.TOUCH_DATE_UNCHANGED);
  clearAccessControlListCache();
  OpenCms.fireCmsEvent(new CmsEvent(I_CmsEventListener.EVENT_RESOURCE_MODIFIED,Collections.singletonMap("resource",destination)));
}
