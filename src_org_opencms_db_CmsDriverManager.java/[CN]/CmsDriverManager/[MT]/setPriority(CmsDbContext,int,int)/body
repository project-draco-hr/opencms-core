{
  CmsTask task=m_workflowDriver.readTask(dbc,taskId);
  task.setPriority(priority);
  task=m_workflowDriver.writeTask(dbc,task);
  m_workflowDriver.writeSystemTaskLog(dbc,taskId,"Priority was set to " + priority + " from "+ dbc.currentUser().getFirstname()+ " "+ dbc.currentUser().getLastname()+ '.');
}
