{
  CmsFile file=null;
  CmsResource resource=readResource(context,filename,filter);
  if (resource.isFolder()) {
    throw new CmsException("Trying to access a folder as file " + "(" + resource.getRootPath() + ")",CmsException.C_NOT_FOUND);
  }
  file=m_vfsDriver.readFile(context.currentProject().getId(),filter.includeDeleted(),resource.getStructureId());
  return file;
}
