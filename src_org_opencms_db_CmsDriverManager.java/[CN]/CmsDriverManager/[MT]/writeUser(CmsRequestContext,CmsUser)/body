{
  if (isAdmin(context) || (context.currentUser().equals(user))) {
    if (isAdmin(context)) {
      user.setEnabled();
    }
    m_userDriver.writeUser(user);
    clearUserCache(user);
    m_userCache.put(new CacheId(user),user);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ user.getName(),CmsException.C_NO_ACCESS);
  }
}
