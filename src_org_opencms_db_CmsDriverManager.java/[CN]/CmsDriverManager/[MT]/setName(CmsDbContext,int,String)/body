{
  if ((name == null) || name.length() == 0) {
    throw new CmsIllegalArgumentException(org.opencms.main.Messages.get().container(org.opencms.main.Messages.ERR_ILLEGAL_ARG_2,"name",name));
  }
  CmsTask task=m_workflowDriver.readTask(dbc,taskId);
  task.setName(name);
  task=m_workflowDriver.writeTask(dbc,task);
  m_workflowDriver.writeSystemTaskLog(dbc,taskId,"Name was set to " + name + "% from "+ dbc.currentUser().getFirstname()+ " "+ dbc.currentUser().getLastname()+ '.');
}
