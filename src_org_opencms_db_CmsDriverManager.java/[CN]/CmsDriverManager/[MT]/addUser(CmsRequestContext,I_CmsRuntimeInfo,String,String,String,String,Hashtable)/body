{
  name=name.trim();
  validFilename(name);
  validatePassword(password);
  if (name.length() > 0) {
    CmsGroup defaultGroup=readGroup(runtimeInfo,group);
    CmsUser newUser=m_userDriver.createUser(runtimeInfo,name,password,description," "," "," ",0,I_CmsConstants.C_FLAG_ENABLED,additionalInfos," ",I_CmsConstants.C_USER_TYPE_SYSTEMUSER);
    addUserToGroup(context,runtimeInfo,newUser.getName(),defaultGroup.getName());
    return newUser;
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ name,CmsException.C_BAD_NAME);
  }
}
