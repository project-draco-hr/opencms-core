{
  m_userDriver.writeAccessControlEntry(dbc,dbc.currentProject(),ace);
  touch(dbc,resource,I_CmsConstants.C_DATE_UNCHANGED,I_CmsConstants.C_DATE_UNCHANGED,I_CmsConstants.C_DATE_UNCHANGED);
  clearAccessControlListCache();
  OpenCms.fireCmsEvent(new CmsEvent(I_CmsEventListener.EVENT_RESOURCE_MODIFIED,Collections.singletonMap("resource",resource)));
}
