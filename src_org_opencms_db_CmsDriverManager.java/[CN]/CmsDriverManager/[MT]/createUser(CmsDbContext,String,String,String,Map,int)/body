{
  name=name.trim();
  OpenCms.getValidationHandler().checkUserName(name);
  validatePassword(password);
  if ((name.length() > 0)) {
    return m_userDriver.createUser(dbc,name,password,description," "," "," ",0,I_CmsPrincipal.FLAG_ENABLED,additionalInfos," ",type);
  }
 else {
    throw new CmsIllegalArgumentException(Messages.get().container(Messages.ERR_BAD_USER_1,name));
  }
}
