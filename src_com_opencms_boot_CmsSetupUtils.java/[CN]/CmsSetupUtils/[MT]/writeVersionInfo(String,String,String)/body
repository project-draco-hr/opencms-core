{
  FileOutputStream fOut=null;
  DataOutputStream dOut=null;
  byte[] content=null;
  FileInputStream fileStream=null;
  int charsRead;
  String newEntry=new String();
  newEntry="\n############### currently used configuration ################\n" + "Date:                " + getNiceDate(System.currentTimeMillis()) + '\n'+ "Used JDK:            "+ usedJDK+ '\n'+ "Used Servlet Engine: "+ thisEngine+ '\n';
  content=newEntry.getBytes();
  String filename=basePath + "WEB-INF/ocsetup/version.txt";
  try {
    File file=new File(filename);
    if (file.exists()) {
      fOut=new FileOutputStream(filename,true);
    }
 else {
      fOut=new FileOutputStream(file);
    }
    dOut=new DataOutputStream(fOut);
    dOut.write(content);
    dOut.flush();
  }
 catch (  IOException e) {
  }
 finally {
    try {
      if (fOut != null)       fOut.close();
    }
 catch (    IOException e) {
    }
  }
}
