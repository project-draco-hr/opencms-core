{
  if (isAdmin(currentUser,currentProject)) {
    readFolder(currentUser,onlineProject(currentUser,currentProject),mountpoint,"");
    CmsResourceType resType=getResourceType(currentUser,currentProject,type);
    CmsMountPoint newMountPoint=new CmsMountPoint(mountpoint,mountpath,name,readUser(currentUser,currentProject,user),readGroup(currentUser,currentProject,group),onlineProject(currentUser,currentProject),resType.getResourceType(),0,accessFlags,resType.getLauncherType(),resType.getLauncherClass());
    Hashtable mountpoints=(Hashtable)m_dbAccess.readSystemProperty(C_SYSTEMPROPERTY_MOUNTPOINT);
    if (mountpoints == null) {
      mountpoints=new Hashtable();
      m_dbAccess.addSystemProperty(C_SYSTEMPROPERTY_MOUNTPOINT,mountpoints);
    }
    mountpoints.put(newMountPoint.getMountpoint(),newMountPoint);
    m_dbAccess.writeSystemProperty(C_SYSTEMPROPERTY_MOUNTPOINT,mountpoints);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ mountpoint,CmsException.C_NO_ACCESS);
  }
}
