{
  if (text == null) {
    if (m_shortExtraInfoLabel.getParent() != null) {
      m_shortExtraInfoLabel.removeFromParent();
    }
  }
 else {
    if (m_shortExtraInfoLabel.getParent() == null) {
      m_titleBox.add(m_shortExtraInfoLabel);
    }
    m_shortExtraInfoLabel.setText(text);
  }
  updateTruncation();
}
