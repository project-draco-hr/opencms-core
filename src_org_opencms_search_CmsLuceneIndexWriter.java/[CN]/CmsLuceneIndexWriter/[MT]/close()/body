{
  Directory dir=m_indexWriter.getDirectory();
  try {
    if ((m_index != null) && LOG.isInfoEnabled()) {
      LOG.info(Messages.get().getBundle().key(Messages.LOG_INDEX_WRITER_MSG_CLOSE_2,m_index.getName(),m_index.getPath()));
    }
    m_indexWriter.close();
  }
  finally {
    if ((dir != null) && IndexWriter.isLocked(dir)) {
      IndexWriter.unlock(dir);
    }
  }
}
