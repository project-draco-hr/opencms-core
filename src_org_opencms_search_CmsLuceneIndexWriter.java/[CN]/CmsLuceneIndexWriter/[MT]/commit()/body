{
  if ((m_index != null) && LOG.isInfoEnabled()) {
    LOG.info(Messages.get().getBundle().key(Messages.LOG_INDEX_WRITER_MSG_COMMIT_2,m_index.getName(),m_index.getPath()));
  }
  m_indexWriter.commit();
  m_optimizeCounter++;
  if (m_optimizeCounter >= COMMIT_OPTIMIZE_THRESHOLD) {
    optimize();
    m_indexWriter.commit();
    m_optimizeCounter=0;
  }
}
