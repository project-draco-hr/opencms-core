{
  String sitePath=getHoverbar().getSitePath();
  CmsSitemapController controller=getHoverbar().getController();
  CmsClientSitemapEntry entry=controller.getEntry(sitePath);
  boolean show=!controller.isRoot(sitePath) && CmsSitemapView.getInstance().isNavigationMode() && (entry != null)&& entry.isInNavigation()&& entry.isFolderType();
  setVisible(show);
  if (show && (entry != null) && !entry.isEditable()) {
    setActive(false);
    setDisabledReason(controller.getNoEditReason(entry));
  }
 else {
    setActive(true);
    setDisabledReason(null);
  }
}
