{
  CmsSitemapController controller=getHoverbar().getController();
  CmsClientSitemapEntry entry=getHoverbar().getEntry();
  boolean show=!controller.isRoot(entry.getSitePath()) && CmsSitemapView.getInstance().isNavigationMode() && entry.isInNavigation()&& entry.isFolderType();
  setVisible(show);
  if (show && !entry.isEditable()) {
    setActive(false);
    setDisabledReason(controller.getNoEditReason(entry));
  }
 else {
    setActive(true);
    setDisabledReason(null);
  }
}
