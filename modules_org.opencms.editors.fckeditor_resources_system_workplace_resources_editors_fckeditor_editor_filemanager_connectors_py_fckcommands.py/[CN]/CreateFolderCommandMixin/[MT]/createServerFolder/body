def createServerFolder(self, folderPath):
    'Purpose: physically creates a folder on the server'
    try:
        permissions = Config.ChmodOnFolderCreate
        if (not permissions):
            os.makedirs(folderPath)
    except AttributeError:
        permissions = 493
    if permissions:
        oldumask = os.umask(0)
        os.makedirs(folderPath, mode=493)
        os.umask(oldumask)
