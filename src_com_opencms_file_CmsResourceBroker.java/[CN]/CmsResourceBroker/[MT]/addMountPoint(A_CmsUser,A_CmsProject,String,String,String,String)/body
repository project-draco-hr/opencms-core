{
  if (isAdmin(currentUser,currentProject)) {
    readFolder(currentUser,currentProject,mountpoint,"");
    A_CmsMountPoint newMountPoint=new CmsMountPoint(mountpoint,driver,connect,name);
    Hashtable mountpoints=(Hashtable)m_propertyRb.readProperty(C_PROPERTY_MOUNTPOINT);
    if (mountpoints == null) {
      mountpoints=new Hashtable();
      m_propertyRb.addProperty(C_PROPERTY_MOUNTPOINT,mountpoints);
    }
    mountpoints.put(newMountPoint.getMountpoint(),newMountPoint);
    m_propertyRb.writeProperty(C_PROPERTY_MOUNTPOINT,mountpoints);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ mountpoint,CmsException.C_NO_ACCESS);
  }
}
