{
  checkMandatoryMetainfos(currentUser,currentProject,C_TYPE_FOLDER_NAME,metainfos);
  validFilename(newFolderName);
  CmsFolder cmsFolder=m_fileRb.readFolder(currentProject,folder);
  if (accessCreate(currentUser,currentProject,(A_CmsResource)cmsFolder)) {
    CmsFolder newFolder=m_fileRb.createFolder(currentUser,currentProject,folder + newFolderName + C_FOLDER_SEPERATOR,0);
    m_metadefRb.writeMetainformations((A_CmsResource)newFolder,metainfos);
    fileSystemChanged(currentProject.getName(),newFolder.getAbsolutePath());
    return (newFolder);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ folder+ newFolderName,CmsException.C_ACCESS_DENIED);
  }
}
