{
  A_CmsResource file=readFileHeader(currentUser,currentProject,source);
  CmsFolder cmsFolder=m_fileRb.readFolder(currentProject,destination);
  if (accessCreate(currentUser,currentProject,(A_CmsResource)cmsFolder)) {
    m_fileRb.copyFile(currentProject,onlineProject(currentUser,currentProject),source,destination + file.getName());
    m_metadefRb.writeMetainformations(m_metadefRb.readAllMetainformations(file),currentProject.getId(),destination + file.getName(),file.getType());
  }
 else {
    throw new CmsException(destination,CmsException.C_NO_ACCESS);
  }
}
