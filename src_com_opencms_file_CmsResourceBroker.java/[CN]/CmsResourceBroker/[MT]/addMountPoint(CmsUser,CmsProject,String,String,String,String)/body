{
  if (isAdmin(currentUser,currentProject)) {
    readFolder(currentUser,onlineProject(currentUser,currentProject),mountpoint,"");
    CmsMountPoint newMountPoint=new CmsMountPoint(mountpoint,driver,connect,name);
    Hashtable mountpoints=(Hashtable)m_systempropertyRb.readProperty(C_SYSTEMPROPERTY_MOUNTPOINT);
    if (mountpoints == null) {
      mountpoints=new Hashtable();
      m_systempropertyRb.addProperty(C_SYSTEMPROPERTY_MOUNTPOINT,mountpoints);
    }
    mountpoints.put(newMountPoint.getMountpoint(),newMountPoint);
    m_systempropertyRb.writeProperty(C_SYSTEMPROPERTY_MOUNTPOINT,mountpoints);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ mountpoint,CmsException.C_NO_ACCESS);
  }
}
