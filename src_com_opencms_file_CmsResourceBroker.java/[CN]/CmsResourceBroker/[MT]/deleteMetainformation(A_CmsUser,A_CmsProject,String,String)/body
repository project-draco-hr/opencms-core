{
  A_CmsResource res=m_fileRb.readFileHeader(currentProject,resource);
  if (!accessWrite(currentUser,currentProject,res)) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ resource,CmsException.C_NO_ACCESS);
  }
  A_CmsMetadefinition metadef=m_metadefRb.readMetadefinition(meta,res.getType());
  if ((metadef != null) && (metadef.getMetadefType() != C_METADEF_TYPE_MANDATORY)) {
    m_metadefRb.deleteMetainformation(res,meta);
  }
 else {
    throw new CmsException("[" + this.getClass().getName() + "] "+ resource,CmsException.C_MANDATORY_METAINFO);
  }
}
