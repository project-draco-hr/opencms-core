{
  if (contentDefinition.getSchemaType(elementName) == null) {
    throw new CmsXmlException(Messages.get().container(Messages.ERR_XMLCONTENT_INVALID_ELEM_LAYOUTWIDGET_1,elementName));
  }
  I_CmsWidget widget=OpenCms.getXmlContentTypeManager().getWidget(className);
  if (widget == null) {
    throw new CmsXmlException(Messages.get().container(Messages.ERR_XMLCONTENT_INVALID_WIDGET_3,className,elementName,contentDefinition.getSchemaLocation()));
  }
  m_elementWidgets.put(elementName,widget);
}
