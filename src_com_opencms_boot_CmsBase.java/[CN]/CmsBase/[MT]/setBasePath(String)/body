{
  if (s != null) {
    s=s.replace('\\','/');
    s=s.replace('/',File.separatorChar);
    if (!s.endsWith(File.separator)) {
      s=s + File.separator;
    }
    if (c_servletLogging)     log(I_CmsLogChannels.C_OPENCMS_INIT,"[CmsBase] Setting OpenCms home folder to " + s + ". ");
    c_basePath=s;
  }
  return s;
}
