{
  int i=0;
synchronized (this) {
    try {
      this.wait(100);
    }
 catch (    InterruptedException e) {
      e.printStackTrace();
    }
    while (isRunning() && ((MS_ONE_SECOND * i) <= ms)) {
      try {
        this.wait(MS_ONE_SECOND);
      }
 catch (      InterruptedException e) {
        e.printStackTrace();
      }
      i++;
    }
  }
}
