{
  if (OpenCms.getRunLevel() > OpenCms.RUNLEVEL_1_CORE_OBJECT) {
    OpenCms.getRoleManager().checkRole(cms,CmsRole.DATABASE_MANAGER);
  }
  m_frozen=false;
  m_aliases=site.getAliases();
  String secureUrl=null;
  if (site.hasSecureServer()) {
    secureUrl=site.getSecureUrl();
  }
  addSite(site.getUrl(),site.getSiteRoot(),site.getTitle(),Float.toString(site.getPosition()),secureUrl,Boolean.toString(site.isExclusiveUrl()),Boolean.toString(site.isExclusiveError()));
  initialize(cms);
  OpenCms.writeConfiguration(CmsSystemConfiguration.class);
}
