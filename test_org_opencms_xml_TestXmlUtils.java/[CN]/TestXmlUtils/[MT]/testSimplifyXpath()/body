{
  assertEquals("Title[1]",CmsXmlUtils.simplifyXpath("/Title[1]"));
  assertEquals("Title[1]",CmsXmlUtils.simplifyXpath("Title[1]/"));
  assertEquals("Title[1]",CmsXmlUtils.simplifyXpath("/Title[1]/"));
  assertEquals("Title",CmsXmlUtils.simplifyXpath("/Title"));
  assertEquals("Title",CmsXmlUtils.simplifyXpath("Title/"));
  assertEquals("Title",CmsXmlUtils.simplifyXpath("/Title/"));
}
