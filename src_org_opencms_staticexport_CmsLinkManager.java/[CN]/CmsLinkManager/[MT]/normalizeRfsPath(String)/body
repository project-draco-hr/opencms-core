{
  if (path != null) {
    path=path.replace('\\','/');
    String drive="";
    if ((path.length() > 1) && (path.charAt(1) == ':')) {
      drive=path.substring(0,2);
      path=path.substring(2);
    }
    if (path.charAt(0) == '/') {
      path="." + path;
    }
    path=CmsStringSubstitution.substitute(drive + CmsLinkManager.getAbsoluteUri(path,"/"),"//","/");
    path=path.replace('/',File.separatorChar);
  }
  return path;
}
