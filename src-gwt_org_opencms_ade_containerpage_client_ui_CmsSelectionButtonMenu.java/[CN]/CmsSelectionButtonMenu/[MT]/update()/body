{
  if (m_timer != null) {
    m_timer.cancel();
    m_timer=null;
  }
  if (isAttached() && !m_mouseOverButton && !m_mouseOverPopup) {
    m_timer=new Timer(){
      @Override public void run(){
        hide();
      }
    }
;
    m_timer.schedule(HIDE_DELAY);
  }
  if (!isAttached() && m_mouseOverButton && m_toggleButton.isDown()) {
    m_timer=new Timer(){
      @Override public void run(){
        show();
        position();
      }
    }
;
    m_timer.schedule(SHOW_DELAY);
  }
}
