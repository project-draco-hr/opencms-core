{
  CmsSitemapController controller=getHoverbar().getController();
  CmsClientSitemapEntry entry=getHoverbar().getEntry();
  boolean show=!CmsSitemapView.getInstance().isSpecialMode() && (entry != null) && entry.isEditable()&& (controller.getData().getDefaultNewElementInfo() != null)&& CmsSitemapView.getInstance().isNavigationMode()&& entry.isInNavigation()&& entry.isFolderType()&& !entry.hasForeignFolderLock();
  setVisible(show);
}
