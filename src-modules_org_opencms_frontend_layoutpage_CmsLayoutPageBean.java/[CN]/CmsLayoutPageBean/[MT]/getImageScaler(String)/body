{
  CmsImageScaler scaler=new CmsImageScaler();
  scaler.setType(1);
  scaler.setPosition(Simapi.POS_DOWN_LEFT);
  Integer imgWidth=(Integer)getLayoutPatterns().get(imgAlign);
  if (imgWidth != null) {
    scaler.setWidth(imgWidth.intValue());
  }
 else {
    scaler.setWidth(IMG_WIDTH_MEDIUM);
  }
  return scaler;
}
