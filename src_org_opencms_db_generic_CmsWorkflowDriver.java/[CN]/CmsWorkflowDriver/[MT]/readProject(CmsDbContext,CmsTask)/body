{
  PreparedStatement stmt=null;
  CmsProject project=null;
  ResultSet res=null;
  Connection conn=null;
  try {
    conn=m_sqlManager.getConnection(dbc);
    stmt=m_sqlManager.getPreparedStatement(conn,"C_PROJECTS_READ_BYTASK");
    stmt.setInt(1,task.getId());
    res=stmt.executeQuery();
    if (res.next()) {
      project=new CmsProject(res,m_sqlManager);
    }
 else {
      throw new CmsDbEntryNotFoundException(Messages.get().container(Messages.ERR_TASK_PROJECT_NOT_FOUND_1,task));
    }
  }
 catch (  SQLException e) {
    throw new CmsDbSqlException(Messages.get().container(Messages.ERR_GENERIC_SQL_1,CmsDbSqlException.getErrorQuery(stmt)),e);
  }
 finally {
    m_sqlManager.closeAll(dbc,conn,stmt,res);
  }
  return project;
}
