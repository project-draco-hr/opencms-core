{
  if ((m_server != null) && (m_index != null)) {
    try {
      LOG.info(Messages.get().getBundle().key(Messages.LOG_SOLR_WRITER_DOC_DELETE_3,rootPath,m_index.getName(),m_index.getPath()));
      m_server.deleteByQuery(I_CmsSearchField.FIELD_PATH + ":" + rootPath+ "*");
    }
 catch (    SolrServerException e) {
      throw new IOException(e.getLocalizedMessage(),e);
    }
  }
}
