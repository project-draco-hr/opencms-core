{
  CmsFile sitemapFile;
  try {
    sitemapFile=cms.readFile(sitemapPath);
  }
 catch (  CmsVfsResourceNotFoundException e) {
    sitemapPath=OpenCms.getSiteManager().getSiteForRootPath(entryPoint.getRootPath()).getSiteRoot() + sitemapPath;
    sitemapFile=cms.readFile(sitemapPath);
  }
  return sitemapFile;
}
