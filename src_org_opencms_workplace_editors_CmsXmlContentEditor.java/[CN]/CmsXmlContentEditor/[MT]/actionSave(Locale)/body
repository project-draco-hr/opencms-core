{
  try {
    setEditorValues(locale);
    if (!hasValidationErrors()) {
      writeContent();
      commitTempFile();
      setParamModified(Boolean.TRUE.toString());
      OpenCms.getSearchManager().updateOfflineIndexes(2 * CmsSearchManager.DEFAULT_OFFLINE_UPDATE_FREQNENCY);
    }
  }
 catch (  CmsException e) {
    showErrorPage(e);
  }
}
