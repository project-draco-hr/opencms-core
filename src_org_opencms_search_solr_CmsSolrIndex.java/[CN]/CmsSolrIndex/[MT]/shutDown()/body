{
  super.shutDown();
  try {
    if (m_solr instanceof EmbeddedSolrServer) {
      SolrCore core=((EmbeddedSolrServer)m_solr).getCoreContainer().getCore(getName());
      if (core != null) {
        core.closeSearcher();
        core.close();
      }
    }
  }
 catch (  NullPointerException e) {
  }
}
