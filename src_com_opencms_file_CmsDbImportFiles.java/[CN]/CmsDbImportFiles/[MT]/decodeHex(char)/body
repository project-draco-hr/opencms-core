{
  int code;
switch (hex) {
case 'a':
case 'A':
{
      code=10;
      break;
    }
case 'b':
case 'B':
{
    code=11;
    break;
  }
case 'c':
case 'C':
{
  code=12;
  break;
}
case 'd':
case 'D':
{
code=13;
break;
}
case 'e':
case 'E':
{
code=14;
break;
}
case 'f':
case 'F':
{
code=15;
break;
}
default :
{
code=Integer.parseInt(String.valueOf(hex));
break;
}
}
return code;
}
