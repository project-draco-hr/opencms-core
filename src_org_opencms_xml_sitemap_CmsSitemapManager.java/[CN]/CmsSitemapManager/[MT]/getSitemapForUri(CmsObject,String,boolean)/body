{
  String rootUri=cms.getRequestContext().addSiteRoot(uri);
  CmsRelation bestMatch=null;
  for (  CmsRelation relation : cms.readRelations(CmsRelationFilter.TARGETS.filterType(CmsRelationType.ENTRY_POINT))) {
    if (CmsResource.isTemporaryFileName(relation.getSourcePath()) || CmsResource.isTemporaryFileName(relation.getTargetPath())) {
      continue;
    }
    if (!rootUri.startsWith(relation.getTargetPath())) {
      continue;
    }
    if ((bestMatch == null) || (!findRoot && relation.getTargetPath().startsWith(bestMatch.getTargetPath())) || (findRoot && bestMatch.getTargetPath().startsWith(relation.getTargetPath()))) {
      bestMatch=relation;
    }
  }
  if (bestMatch == null) {
    return null;
  }
  return CmsXmlSitemapFactory.unmarshal(cms,cms.readResource(bestMatch.getSourceId()));
}
