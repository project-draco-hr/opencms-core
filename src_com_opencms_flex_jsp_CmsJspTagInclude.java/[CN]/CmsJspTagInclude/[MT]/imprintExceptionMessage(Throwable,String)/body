{
  String message=t.getMessage();
  if ((message == null) || !(message.startsWith("cause "))) {
    String cause;
    if (t instanceof ServletException) {
      cause="" + ((ServletException)t).getRootCause();
    }
 else {
      cause="" + t;
    }
    message="cause " + cause + " in "+ target;
  }
 else {
    message+=" included by " + target;
  }
  return message;
}
