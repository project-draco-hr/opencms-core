{
  try {
    ResultSet result;
    PreparedStatement statementReadAllMetainfoCount=m_con.prepareStatement(C_METAINFO_READALL_COUNT);
    statementReadAllMetainfoCount.setInt(1,metadef.getId());
    result=statementReadAllMetainfoCount.executeQuery();
    if (result.next()) {
      return (result.getInt(1));
    }
 else {
      throw new CmsException("[" + this.getClass().getName() + "] "+ metadef.getName(),CmsException.C_UNKNOWN_EXCEPTION);
    }
  }
 catch (  SQLException exc) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ exc.getMessage(),CmsException.C_SQL_ERROR,exc);
  }
}
