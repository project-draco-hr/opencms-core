{
  if (name == null) {
    return null;
  }
  if (name.length() <= maxLength) {
    return name;
  }
  String result=CmsResource.getName(name);
  name=CmsResource.getParentFolder(name);
  while (name != null) {
    String part=CmsResource.getName(name);
    if ((part.length() + result.length()) <= maxLength) {
      result=part + result;
    }
 else {
      result="/" + result;
      if (!part.equals("/")) {
        result="/..." + result;
      }
      break;
    }
    name=CmsResource.getParentFolder(name);
  }
  return result;
}
