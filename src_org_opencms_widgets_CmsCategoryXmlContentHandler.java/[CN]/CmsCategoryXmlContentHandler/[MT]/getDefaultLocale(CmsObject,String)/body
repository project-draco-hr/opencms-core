{
  Locale locale=OpenCms.getLocaleManager().getDefaultLocale(cms,resource);
  if (locale == null) {
    List locales=OpenCms.getLocaleManager().getAvailableLocales();
    if (locales.size() > 0) {
      locale=(Locale)locales.get(0);
    }
 else {
      locale=Locale.ENGLISH;
    }
  }
  return locale;
}
