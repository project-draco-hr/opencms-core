{
  try {
    ResultSet result;
    PreparedStatement statementReadProject=m_con.prepareStatement(C_PROJECT_READ);
    statementReadProject.setInt(1,id);
    result=statementReadProject.executeQuery();
    if (result.next()) {
      return new CmsProject(result.getInt(C_PROJECT_ID),result.getString(C_PROJECT_NAME),result.getString(C_PROJECT_DESCRIPTION),result.getInt(C_TASK_ID),result.getInt(C_USER_ID),result.getInt(C_GROUP_ID),result.getInt(C_MANAGERGROUP_ID),result.getInt(C_PROJECT_FLAGS),SqlHelper.getTimestamp(result,C_PROJECT_CREATEDATE),SqlHelper.getTimestamp(result,C_PROJECT_PUBLISHDATE));
    }
 else {
      throw new CmsException("[" + this.getClass().getName() + "] "+ id,CmsException.C_NOT_FOUND);
    }
  }
 catch (  Exception exc) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ exc.getMessage(),CmsException.C_SQL_ERROR,exc);
  }
}
