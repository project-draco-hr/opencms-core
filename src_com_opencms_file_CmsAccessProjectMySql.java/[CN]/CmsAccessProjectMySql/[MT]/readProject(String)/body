{
  try {
    ResultSet result;
    PreparedStatement statementReadProject=m_con.prepareStatement(C_PROJECT_READ);
    statementReadProject.setString(1,name);
    result=statementReadProject.executeQuery();
    if (result.next()) {
      return (new CmsProject(result.getInt(C_PROJECT_ID),result.getString(C_PROJECT_NAME),result.getString(C_PROJECT_DESCRIPTION),result.getInt(C_TASK_ID),result.getInt(C_USER_ID),result.getInt(C_GROUP_ID),result.getInt(C_PROJECT_FLAGS),result.getTimestamp(C_PROJECT_PUBLISHDATE)));
    }
 else {
      throw new CmsException("[" + this.getClass().getName() + "] "+ name,CmsException.C_NOT_FOUND);
    }
  }
 catch (  SQLException exc) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ exc.getMessage(),CmsException.C_SQL_ERROR,exc);
  }
}
