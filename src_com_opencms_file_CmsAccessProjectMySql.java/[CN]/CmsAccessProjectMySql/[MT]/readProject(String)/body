{
  try {
    m_statementReadProject.setString(1,name);
    ResultSet result=m_statementReadProject.executeQuery();
    if (result.next()) {
      return (new CmsProject(result.getInt(C_PROJECT_ID),result.getString(C_PROJECT_NAME),result.getString(C_PROJECT_DESCRIPTION),result.getInt(C_GLOBETASK_ID),result.getInt(C_USER_ID),result.getInt(C_GROUP_ID),result.getInt(C_PROJECT_FLAGS)));
    }
 else {
      throw new CmsException(CmsException.C_NOT_FOUND);
    }
  }
 catch (  SQLException exc) {
    throw new CmsException(CmsException.C_SQL_ERROR,exc);
  }
}
