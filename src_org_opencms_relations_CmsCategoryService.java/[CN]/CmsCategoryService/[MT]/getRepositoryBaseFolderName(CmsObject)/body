{
  try {
    String value=cms.readPropertyObject(CmsCategoryService.CENTRALIZED_REPOSITORY,CmsPropertyDefinition.PROPERTY_DEFAULT_FILE,false).getValue(CmsCategoryService.REPOSITORY_BASE_FOLDER);
    if (!value.endsWith("/")) {
      value+="/";
    }
    if (!value.startsWith("/")) {
      value="/" + value;
    }
    return value;
  }
 catch (  CmsException e) {
    if (LOG.isErrorEnabled()) {
      LOG.error(e.getLocalizedMessage(),e);
    }
    return CmsCategoryService.REPOSITORY_BASE_FOLDER;
  }
}
