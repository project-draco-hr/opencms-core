{
  List categories=new ArrayList();
  List resources=cms.readResources(cms.getRequestContext().removeSiteRoot(rootPath),CmsResourceFilter.DEFAULT.addRequireType(CmsResourceTypeFolder.RESOURCE_TYPE_ID),includeSubCats);
  Iterator it=resources.iterator();
  while (it.hasNext()) {
    CmsResource resource=(CmsResource)it.next();
    categories.add(getCategory(cms,resource));
  }
  return categories;
}
