{
  if (fmtArg == null) {
    throw new NullPointerException();
  }
  if (fmtArg.length() == 0) {
    throw new IllegalArgumentException("Control strings must have positive" + " lengths.");
  }
  if (fmtArg.charAt(0) == '%') {
    m_fmt=fmtArg;
    m_pos=1;
    setArgPosition();
    setFlagCharacters();
    setFieldWidth();
    setPrecision();
    setOptionalHL();
    if (setConversionCharacter()) {
      if (m_pos == fmtArg.length()) {
        if (m_leadingZeros && m_leftJustify) {
          m_leadingZeros=false;
        }
        if (m_precisionSet && m_leadingZeros) {
          if (m_conversionCharacter == 'd' || m_conversionCharacter == 'i' || m_conversionCharacter == 'o' || m_conversionCharacter == 'x') {
            m_leadingZeros=false;
          }
        }
      }
 else {
        throw new IllegalArgumentException("Malformed conversion specification=" + fmtArg);
      }
    }
 else {
      throw new IllegalArgumentException("Malformed conversion specification=" + fmtArg);
    }
  }
 else {
    throw new IllegalArgumentException("Control strings must begin with %.");
  }
}
