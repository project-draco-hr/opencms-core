{
  CmsSolrField solrField=new CmsSolrField(I_CmsSearchField.FIELD_CONTENT,null,null,null,I_CmsSearchField.BOOST_DEFAULT);
  solrField.addMapping(new CmsSearchFieldMapping(CmsSearchFieldMappingType.CONTENT,I_CmsSearchField.FIELD_CONTENT));
  addField(solrField);
  for (  Locale locale : OpenCms.getLocaleManager().getAvailableLocales()) {
    solrField=new CmsSolrField(A_CmsSearchFieldConfiguration.getLocaleExtendedName(I_CmsSearchField.FIELD_CONTENT,locale),Collections.singletonList(locale.toString() + "_excerpt"),locale,null,I_CmsSearchField.BOOST_DEFAULT);
    solrField.addMapping(new CmsSearchFieldMapping(CmsSearchFieldMappingType.CONTENT,I_CmsSearchField.FIELD_CONTENT));
    addField(solrField);
  }
}
