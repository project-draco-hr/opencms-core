{
  for (  Locale locale : OpenCms.getLocaleManager().getAvailableLocales()) {
    CmsSolrField solrField=new CmsSolrField(A_CmsSearchFieldConfiguration.getLocaleExtendedName(I_CmsSearchField.FIELD_CONTENT,locale),null,locale,null,I_CmsSearchField.BOOST_DEFAULT);
    solrField.addMapping(new CmsSearchFieldMapping(CmsSearchFieldMappingType.CONTENT,I_CmsSearchField.FIELD_CONTENT));
    addField(solrField);
  }
}
