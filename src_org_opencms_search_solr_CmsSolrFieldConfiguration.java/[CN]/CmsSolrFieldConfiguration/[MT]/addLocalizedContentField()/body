{
  for (  Locale locale : OpenCms.getLocaleManager().getAvailableLocales()) {
    CmsSolrField solrField=new CmsSolrField(I_CmsSearchField.FIELD_PREFIX_DYNAMIC + locale.getLanguage(),I_CmsSearchField.FIELD_CONTENT,null,locale,null,I_CmsSearchField.BOOST_DEFAULT);
    solrField.addMapping(new CmsSolrFieldMapping(CmsSearchFieldMappingType.CONTENT,I_CmsSearchField.FIELD_CONTENT));
    addField(solrField);
  }
}
