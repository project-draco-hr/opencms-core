def createXmlHeader(self, command, resourceType, currentFolder, url):
    'Purpose: returns the xml header'
    self.setHttpHeaders()
    s = '<?xml version="1.0" encoding="utf-8" ?>'
    s += ('<Connector command="%s" resourceType="%s">' % (command, resourceType))
    s += ('<CurrentFolder path="%s" url="%s" />' % (convertToXmlAttribute(currentFolder), convertToXmlAttribute(url)))
    return s
