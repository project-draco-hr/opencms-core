{
  this(resource.getStructureId(),resource.getResourceId(),resource.getParentStructureId(),resource.getContentId(),resource.getName(),resource.getTypeId(),resource.getFlags(),resource.getProjectLastModified(),resource.getState(),resource.getLoaderId(),resource.getDateCreated(),resource.getUserCreated(),resource.getDateLastModified(),resource.getUserLastModified(),resource.getDateReleased(),resource.getDateExpired(),resource.getSiblingCount(),0,new byte[0]);
  if (resource.hasFullResourceName()) {
    setFullResourceName(resource.getRootPath());
  }
  if (resource instanceof CmsFile) {
    m_fileContent=((CmsFile)resource).getContents();
    if (m_fileContent == null) {
      m_fileContent=new byte[0];
    }
  }
}
