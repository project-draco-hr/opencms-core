{
  m_buildingIndex=true;
  try {
    long linePos=0;
    LineNumberReader reader=new LineNumberReader(new BufferedReader(new InputStreamReader(new FileInputStream(m_file))));
    String line=null;
    while ((line=reader.readLine()) != null) {
      linePos+=line.length();
      CmsRfsFileLineIndexInfo.this.addLineBreakPosition(linePos);
synchronized (CmsRfsFileLineIndexInfo.this) {
        CmsRfsFileLineIndexInfo.this.notify();
      }
    }
  }
 catch (  IOException e) {
    LOG.error(e.toString());
  }
  m_buildingIndex=false;
synchronized (CmsRfsFileLineIndexInfo.this) {
    CmsRfsFileLineIndexInfo.this.notify();
  }
}
