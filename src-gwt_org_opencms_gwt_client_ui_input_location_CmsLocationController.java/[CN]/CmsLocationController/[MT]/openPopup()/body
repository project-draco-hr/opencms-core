{
  if (m_popup == null) {
    m_popup=new CmsPopup(Messages.get().key(Messages.GUI_LOCATION_DIALOG_TITLE_0),1020);
    m_popupContent=new CmsLocationPopupContent(this,new CmsLocationSuggestOracle(this),getModeItems(),getTypeItems(),getZoomItems());
    m_popup.setMainContent(m_popupContent);
    m_popup.addDialogClose(new Command(){
      public void execute(){
        fireChangeEventOnPicker(false);
      }
    }
);
  }
  m_popup.center();
  m_popup.show();
  updateForm();
  initialize();
}
