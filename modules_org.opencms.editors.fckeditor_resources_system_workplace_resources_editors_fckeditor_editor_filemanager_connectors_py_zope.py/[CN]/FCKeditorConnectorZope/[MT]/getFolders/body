def getFolders(self, resourceType, currentFolder):
    s = ''
    s += '<Folders>'
    zopeFolder = self.findZopeFolder(resourceType, currentFolder)
    for (name, o) in zopeFolder.objectItems(['Folder']):
        s += ('<Folder name="%s" />' % convertToXmlAttribute(name))
    s += '</Folders>'
    return s
