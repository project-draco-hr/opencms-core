{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  CmsTask result=null;
  try {
    result=m_driverManager.readTask(dbc,id);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_READ_TASK_FOR_ID_1,new Integer(id)),e);
  }
 finally {
    dbc.clear();
  }
  return result;
}
