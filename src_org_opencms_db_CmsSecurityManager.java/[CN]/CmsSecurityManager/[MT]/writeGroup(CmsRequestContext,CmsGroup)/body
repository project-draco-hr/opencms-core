{
  if (isAdmin(context)) {
    throw new CmsSecurityException("[" + this.getClass().getName() + "] writeGroup() "+ group.getName(),CmsSecurityException.C_SECURITY_ADMIN_PRIVILEGES_REQUIRED);
  }
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    m_driverManager.writeGroup(dbc,group);
  }
 catch (  Exception e) {
    dbc.report(null,"Error writing group " + group.getName(),e);
  }
 finally {
    dbc.clear();
  }
}
