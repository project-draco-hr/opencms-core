{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    checkOfflineProject(dbc);
    checkPermissions(dbc,resource,CmsPermissionSet.ACCESS_WRITE,false,CmsResourceFilter.ALL);
    m_driverManager.lockResource(dbc,resource,type);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_LOCK_RESOURCE_2,context.getSitePath(resource),type.toString()),e);
  }
 finally {
    dbc.clear();
  }
}
