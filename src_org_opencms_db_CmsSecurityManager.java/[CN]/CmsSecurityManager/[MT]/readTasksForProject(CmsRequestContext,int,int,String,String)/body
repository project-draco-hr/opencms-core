{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  List result=null;
  try {
    result=m_driverManager.readTasksForProject(dbc,projectId,tasktype,orderBy,sort);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_READ_TASK_FOR_PROJECT_AND_TYPE_2,new Integer(projectId),org.opencms.workflow.Messages.toTaskTypeString(tasktype,context)),e);
  }
 finally {
    dbc.clear();
  }
  return result;
}
