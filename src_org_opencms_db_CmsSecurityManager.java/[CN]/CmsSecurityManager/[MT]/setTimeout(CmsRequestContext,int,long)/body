{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    m_driverManager.setTimeout(dbc,taskId,timeout);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_SET_TASK_TIMEOUT_2,new Date(timeout),new Integer(taskId)),e);
  }
 finally {
    dbc.clear();
  }
}
