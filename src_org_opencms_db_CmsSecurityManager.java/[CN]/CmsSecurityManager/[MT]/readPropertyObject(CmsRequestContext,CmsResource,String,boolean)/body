{
  CmsProperty result=null;
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    result=m_driverManager.readPropertyObject(dbc,resource,key,search);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_READ_PROP_FOR_RESOURCE_2,key,dbc.getRequestContext().removeSiteRoot(resource.getRootPath())),e);
  }
 finally {
    dbc.clear();
  }
  return result;
}
