{
  CmsUser newUser;
  if (isAdmin(context)) {
    I_CmsRuntimeInfo runtimeInfo=m_runtimeInfoFactory.getRuntimeInfo(m_driverManager,I_CmsRuntimeInfo.C_RUNTIMEINFO_USER);
    try {
      newUser=m_driverManager.addUser(context,runtimeInfo,name,password,group,description,additionalInfos);
      runtimeInfo.pop();
    }
 catch (    CmsException e) {
      runtimeInfo.report(null,"Error adding user " + name,e);
      throw e;
    }
 finally {
      runtimeInfo.clear();
    }
  }
 else {
    throw new CmsSecurityException("[" + this.getClass().getName() + "] addUser() "+ name,CmsSecurityException.C_SECURITY_ADMIN_PRIVILEGES_REQUIRED);
  }
  return newUser;
}
