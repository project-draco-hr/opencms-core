{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    checkPermissions(dbc,resource,CmsPermissionSet.ACCESS_WRITE,true,CmsResourceFilter.IGNORE_EXPIRATION);
    m_driverManager.touch(dbc,resource,dateLastModified,dateReleased,dateExpired);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_TOUCH_RESOURCE_4,new Object[]{CmsDateUtil.getDateTime(new Date(dateLastModified),DateFormat.SHORT,context.getLocale()).toString(),CmsDateUtil.getDateTime(new Date(dateReleased),DateFormat.SHORT,context.getLocale()).toString(),CmsDateUtil.getDateTime(new Date(dateExpired),DateFormat.SHORT,context.getLocale()).toString(),context.getSitePath(resource)}),e);
  }
 finally {
    dbc.clear();
  }
}
