{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    m_driverManager.copyResource(dbc,source,destination,siblingMode);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_COPY_RESOURCE_2,source.getRootPath(),destination),e);
  }
 finally {
    dbc.clear();
  }
}
