{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  CmsRequestContext rc=dbc.getRequestContext();
  try {
    m_driverManager.copyResource(dbc,source,destination,siblingMode);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_COPY_RESOURCE_2,rc.removeSiteRoot(source.getRootPath()),rc.removeSiteRoot(destination)),e);
  }
 finally {
    dbc.clear();
  }
}
