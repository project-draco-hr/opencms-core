{
  if (!user.isWebUser()) {
    throw new CmsSecurityException("[" + this.getClass().getName() + "] writeWebUser() "+ user.getName(),CmsSecurityException.C_SECURITY_NO_PERMISSIONS);
  }
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  try {
    m_driverManager.writeWebUser(dbc,user);
  }
 catch (  Exception e) {
    dbc.report(null,"Error writing web user " + user.getName(),e);
  }
 finally {
    dbc.clear();
  }
}
