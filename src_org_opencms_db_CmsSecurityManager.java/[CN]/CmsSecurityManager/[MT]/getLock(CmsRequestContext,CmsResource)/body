{
  CmsDbContext dbc=m_dbContextFactory.getDbContext(context);
  CmsLock result=null;
  try {
    result=m_driverManager.getLock(dbc,resource);
  }
 catch (  Exception e) {
    dbc.report(null,Messages.get().container(Messages.ERR_GET_LOCK_1,dbc.getRequestContext().removeSiteRoot(resource.getRootPath())),e);
  }
 finally {
    dbc.clear();
  }
  return result;
}
