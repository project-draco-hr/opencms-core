{
  StringBuffer Argument=new StringBuffer();
  boolean done_parsing=false;
  boolean in_quotes=false;
  while (!done_parsing) {
    String Tok=Tokenizer.nextToken();
    if (Tok.equals("'")) {
      in_quotes=!in_quotes;
      Argument.append(Tok);
    }
 else {
      if (!in_quotes && Tok.equals("}")) {
        done_parsing=true;
        Tokenizer.pushBack();
      }
 else {
        Argument.append(Tok);
      }
    }
  }
  return Argument.toString();
}
