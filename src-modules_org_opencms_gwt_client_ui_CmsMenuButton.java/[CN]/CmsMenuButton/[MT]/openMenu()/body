{
  m_isOpen=true;
  m_button.setDown(true);
  m_content.show();
  positionPopup();
  CmsSlideAnimation.slideIn(m_content.getElement(),null,200);
  m_resizeRegistration=Window.addResizeHandler(new ResizeHandler(){
    public void onResize(    ResizeEvent event){
      positionPopup();
    }
  }
);
}
