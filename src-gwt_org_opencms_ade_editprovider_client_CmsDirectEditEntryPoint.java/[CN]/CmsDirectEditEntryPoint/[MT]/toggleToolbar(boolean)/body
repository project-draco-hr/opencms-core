{
  if (show) {
    CmsDebugLog.consoleLog("Showing toolbar");
    CmsToolbar.showToolbar(m_toolbar,true,m_toolbarVisibility,I_CmsLayoutBundle.INSTANCE.toolbarCss().simpleToolbarShow());
    saveToolbarVisibility(true);
  }
 else {
    CmsDebugLog.consoleLog("Hiding toolbar");
    CmsToolbar.showToolbar(m_toolbar,false,m_toolbarVisibility,I_CmsLayoutBundle.INSTANCE.toolbarCss().simpleToolbarShow());
    saveToolbarVisibility(false);
  }
}
