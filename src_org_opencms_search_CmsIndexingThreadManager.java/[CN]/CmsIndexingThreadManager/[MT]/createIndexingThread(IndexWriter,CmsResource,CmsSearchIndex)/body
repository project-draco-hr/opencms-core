{
  CmsIndexingThread thread=new CmsIndexingThread(m_manager,writer,res,index,m_report,this);
  try {
    m_fileCounter++;
    thread.start();
    thread.join(m_timeout);
    if (thread.isAlive()) {
      if (OpenCms.getLog(this).isWarnEnabled()) {
        OpenCms.getLog(this).warn("Timeout while indexing file " + res.getRootPath() + ", abandoning thread");
      }
      m_report.println();
      m_report.println(m_report.key("search.indexing_file_failed") + " : " + "Timeout while indexing file "+ res.getRootPath()+ ", abandoning thread",I_CmsReport.C_FORMAT_WARNING);
      m_abandonedCounter++;
      thread.interrupt();
    }
  }
 catch (  InterruptedException exc) {
  }
}
