{
  PreparedStatement statement=null;
  ResultSet res=null;
  int retValue;
  try {
    statement=m_pool.getPreparedStatement(m_cq.C_RESOURCES_COUNTLOCKED_KEY);
    statement.setInt(1,project.getId());
    res=statement.executeQuery();
    if (res.next()) {
      retValue=res.getInt(1);
    }
 else {
      res.close();
      res=null;
      retValue=0;
    }
  }
 catch (  Exception exc) {
    throw new CmsException("[" + this.getClass().getName() + "] "+ exc.getMessage(),CmsException.C_SQL_ERROR,exc);
  }
 finally {
    if (statement != null) {
      m_pool.putPreparedStatement(m_cq.C_RESOURCES_COUNTLOCKED_KEY,statement);
    }
    if (res != null) {
      try {
        res.close();
      }
 catch (      SQLException se) {
      }
    }
  }
  return retValue;
}
