{
  if (m_indexWriter != null) {
    if (!create) {
      return m_indexWriter;
    }
 else {
      try {
        m_indexWriter.close();
        m_indexWriter=null;
      }
 catch (      IOException e) {
        throw new CmsIndexException(Messages.get().container(Messages.LOG_IO_INDEX_WRITER_CLOSE_2,getPath(),getName()),e);
      }
    }
  }
  indexWriterUnlock(report);
  I_CmsIndexWriter indexWriter=indexWriterCreate(create);
  if (!create) {
    m_indexWriter=indexWriter;
  }
  return indexWriter;
}
