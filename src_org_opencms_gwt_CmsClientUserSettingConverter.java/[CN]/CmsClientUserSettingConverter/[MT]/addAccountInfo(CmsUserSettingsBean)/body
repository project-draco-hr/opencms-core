{
  Locale wpLocale=OpenCms.getWorkplaceManager().getWorkplaceLocale(m_cms);
  CmsMessages wpMessages=org.opencms.workplace.commons.Messages.get().getBundle(wpLocale);
  CmsUser user=m_currentPreferences.getUser();
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_LABEL_USER_0),user.getName());
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_LABEL_EMAIL_0),user.getEmail());
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_LABEL_LASTNAME_0),user.getLastname());
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_LABEL_FIRSTNAME_0),user.getFirstname());
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_INPUT_ADRESS_0),user.getAddress());
  prefs.addAccountInfo(wpMessages.key(org.opencms.workplace.commons.Messages.GUI_LABEL_DESCRIPTION_0),user.getDescription(wpLocale));
}
