{
  try {
    m_active=OpenCms.getRegistry().getModuleParameterBoolean("com.opencms.modules.search.lucene","active");
    m_newIndex=OpenCms.getRegistry().getModuleParameterBoolean("com.opencms.modules.search.lucene","newIndex");
  }
 catch (  Exception ex) {
    m_active=true;
    m_newIndex=false;
  }
  if (debug) {
    System.out.println("m_active=" + m_active);
    System.out.println("m_newIndex=" + m_newIndex);
  }
  if (m_active) {
    createIndex(cms,m_url,changedResources);
  }
}
