{
  if (!m_enabled) {
    return;
  }
  m_openClose.setDown(true);
  int newWidth=m_opener.getOffsetWidth() - 2;
  m_popup.setWidth(newWidth + "px");
  m_popup.show();
  CmsDomUtil.positionElement(m_popup.getElement(),m_panel.getElement(),0,CmsDomUtil.getCurrentStyleFloat(m_opener.getElement(),CmsDomUtil.Style.height));
  m_selectBoxState.setValue(I_CmsLayoutBundle.INSTANCE.generalCss().cornerTop());
}
