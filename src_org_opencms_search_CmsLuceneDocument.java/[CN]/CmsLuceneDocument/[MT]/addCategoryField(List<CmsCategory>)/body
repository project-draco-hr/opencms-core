{
  if ((categories != null) && (categories.size() > 0)) {
    StringBuffer categoryBuffer=new StringBuffer(128);
    for (    CmsCategory category : categories) {
      categoryBuffer.append(category.getPath());
      categoryBuffer.append(' ');
    }
    if (categoryBuffer.length() > 0) {
      Fieldable field=new Field(I_CmsSearchField.FIELD_CATEGORY,categoryBuffer.toString().toLowerCase(),Field.Store.YES,Field.Index.ANALYZED);
      field.setBoost(0);
      m_doc.add(field);
    }
  }
 else {
    Fieldable field=new Field(I_CmsSearchField.FIELD_CATEGORY,CmsSearchCategoryCollector.UNKNOWN_CATEGORY,Field.Store.YES,Field.Index.ANALYZED);
    m_doc.add(field);
  }
}
