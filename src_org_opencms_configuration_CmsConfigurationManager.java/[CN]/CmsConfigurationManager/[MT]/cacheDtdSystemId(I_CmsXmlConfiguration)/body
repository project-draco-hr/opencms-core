{
  if (configuration.getDtdSystemLocation() != null) {
    try {
      String file=CmsFileUtil.readFile(configuration.getDtdSystemLocation() + configuration.getDtdFilename(),CmsEncoder.C_UTF8_ENCODING);
      CmsXmlEntityResolver.cacheSystemId(configuration.getDtdUrlPrefix() + configuration.getDtdFilename(),file.getBytes(CmsEncoder.C_UTF8_ENCODING));
      if (OpenCms.getLog(this).isDebugEnabled()) {
        OpenCms.getLog(this).debug("Cached DTD system id: " + configuration.getDtdUrlPrefix() + configuration.getDtdFilename()+ " --> "+ configuration.getDtdSystemLocation()+ configuration.getDtdFilename());
      }
    }
 catch (    IOException e) {
      OpenCms.getLog(this).error("Unable to cache DTD for file: " + configuration.getDtdSystemLocation() + configuration.getDtdFilename(),e);
    }
  }
}
