{
  m_optionsVisible=optionsVisible;
  m_ouSelect.setVisible(optionsVisible);
  m_forgotPasswordButton.setVisible(optionsVisible);
  String optionsMessage=CmsVaadinUtils.getMessageText(optionsVisible ? org.opencms.workplace.Messages.GUI_LOGIN_ORGUNIT_SELECT_OFF_0 : org.opencms.workplace.Messages.GUI_LOGIN_ORGUNIT_SELECT_ON_0);
  m_optionsButton.setCaption(optionsMessage);
}
