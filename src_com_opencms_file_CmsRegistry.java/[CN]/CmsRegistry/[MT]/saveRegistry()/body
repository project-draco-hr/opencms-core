{
  try {
    File xmlFile=new File(m_regFileName);
    BufferedOutputStream os=new BufferedOutputStream(new FileOutputStream(xmlFile));
    A_CmsXmlContent.getXmlParser().getXmlText(m_xmlReg,os,OpenCms.getDefaultEncoding());
    init(false);
    if (OpenCms.getLog(CmsLog.CHANNEL_MAIN).isInfoEnabled())     OpenCms.getLog(CmsLog.CHANNEL_MAIN).info("[CmsRegistry] Saved the registry");
  }
 catch (  Exception exc) {
    throw new CmsException("couldn't save registry",CmsException.C_REGISTRY_ERROR,exc);
  }
}
