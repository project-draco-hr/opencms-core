{
  if (m_fileTable.isEditing()) {
    m_fileTable.stopEdit();
  }
 else   if (!event.isCtrlKey()) {
    if (event.getButton().equals(MouseButton.RIGHT)) {
      m_fileTable.handleSelection((CmsUUID)event.getItemId());
      m_fileTable.openContextMenu(event);
    }
 else     if ((event.getPropertyId() == null) || CmsResourceTableProperty.PROPERTY_TYPE_ICON.equals(event.getPropertyId())) {
      m_fileTable.openContextMenu(event);
    }
 else {
      Boolean isFolder=(Boolean)event.getItem().getItemProperty(CmsResourceTableProperty.PROPERTY_IS_FOLDER).getValue();
      if ((isFolder != null) && isFolder.booleanValue()) {
        expandCurrentFolder();
        if (m_fileTree.getItem(event.getItemId()) != null) {
          m_fileTree.select(event.getItemId());
        }
        readFolder((CmsUUID)event.getItemId());
      }
    }
  }
}
