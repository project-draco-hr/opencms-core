{
  CmsPushButton infoButton=new CmsPushButton();
  infoButton.setImageClass(I_CmsButton.ButtonData.INFO.getSmallIconClass());
  infoButton.setTitle(I_CmsButton.ButtonData.INFO.getTitle());
  infoButton.setButtonStyle(I_CmsButton.ButtonStyle.FONT_ICON,null);
  infoButton.addStyleName(I_CmsLayoutBundle.INSTANCE.buttonCss().optionButton());
  add(infoButton);
  infoButton.addClickHandler(new ClickHandler(){
    public void onClick(    ClickEvent event){
      CmsResourceInfoDialog.load(m_editableData.getStructureId(),true,null,null);
    }
  }
);
  return infoButton;
}
