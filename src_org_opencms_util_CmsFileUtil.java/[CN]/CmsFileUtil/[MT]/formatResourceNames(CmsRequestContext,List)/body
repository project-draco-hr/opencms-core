{
  if (resources == null) {
    return null;
  }
  StringBuffer result=new StringBuffer(128);
  Iterator i=resources.iterator();
  while (i.hasNext()) {
    CmsResource res=(CmsResource)i.next();
    String path=res.getRootPath();
    if (context != null) {
      path=context.removeSiteRoot(path);
    }
    result.append(path);
    if (i.hasNext()) {
      result.append(", ");
    }
  }
  return result.toString();
}
