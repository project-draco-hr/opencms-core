{
  if (path != null) {
    path=path.replace('\\','/');
    String drive;
    if ((path.length() > 1) && (path.charAt(1) == ':')) {
      drive=path.substring(0,2);
      path=path.substring(2);
    }
 else {
      drive="";
    }
    if (path.charAt(0) == '/') {
      path="." + path;
    }
    path=CmsLinkManager.getAbsoluteUri(path,"/");
    path=CmsStringUtil.substitute(drive.concat(path),"//","/");
    path=path.replace('/',File.separatorChar);
  }
  return path;
}
