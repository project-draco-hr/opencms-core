{
  try {
    CmsObject cms=OpenCms.initCmsObject(getCmsObject());
    cms.getRequestContext().setSiteRoot("");
    String path=option.getSiteRoot();
    CmsResource optionRes=cms.readResource(path);
    CmsVfsEntryBean entryBean=new CmsVfsEntryBean(option.getSiteRoot(),optionRes.getStructureId(),option.getSiteRoot(),true,isEditable(cms,optionRes));
    return entryBean;
  }
 catch (  Throwable e) {
    error(e);
    return null;
  }
}
