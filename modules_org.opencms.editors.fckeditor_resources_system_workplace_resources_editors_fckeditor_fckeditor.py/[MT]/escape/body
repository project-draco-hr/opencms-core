def escape(text, replace=string.replace):
    "Converts the special characters '<', '>', and '&'.\n\n    RFC 1866 specifies that these characters be represented\n    in HTML as &lt; &gt; and &amp; respectively. In Python\n    1.5 we use the new string.replace() function for speed.\n    "
    text = replace(text, '&', '&amp;')
    text = replace(text, '<', '&lt;')
    text = replace(text, '>', '&gt;')
    text = replace(text, '"', '&quot;')
    text = replace(text, "'", '&#39;')
    return text
