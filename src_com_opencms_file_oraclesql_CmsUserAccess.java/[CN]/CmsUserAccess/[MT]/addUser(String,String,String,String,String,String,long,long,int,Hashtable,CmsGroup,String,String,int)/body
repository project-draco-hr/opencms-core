    con=m_SqlQueries.getConnection();
    statement=con.prepareStatement(m_SqlQueries.get("C_ORACLE_USERSFORINSERT"));
    statement.setInt(1,id);
    statement.setString(2,(new CmsUUID()).toString());
    statement.setString(3,name);
