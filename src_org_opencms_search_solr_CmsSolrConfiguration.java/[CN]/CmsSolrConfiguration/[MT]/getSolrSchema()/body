{
  if (m_schema == null) {
    try {
      InputSource solrSchema=new InputSource(new FileInputStream(getSolrSchemaFile()));
      m_schema=new IndexSchema(getSolrConfig(),null,solrSchema);
    }
 catch (    FileNotFoundException e) {
      CmsConfigurationException ex=new CmsConfigurationException(Messages.get().container(Messages.ERR_SOLR_SCHEMA_XML_NOT_FOUND_1,getSolrSchemaFile().getPath()),e);
      LOG.error(ex.getLocalizedMessage(),ex);
    }
  }
  return m_schema;
}
