{
  CmsObject cms=A_CmsUI.getCmsObject();
  Component userDropdown=createDropDown(new ExternalResource(CmsUserIconHelper.getInstance().getSmallIconPath(cms,cms.getRequestContext().getCurrentUser())),new CmsUserInfo(),"User info");
