{
  boolean hasPermissions=false;
  try {
    CmsResource res;
    if (neededForFolder) {
      res=getCms().readResource(CmsResource.getParentFolder(getParamResource()),CmsResourceFilter.ALL);
    }
 else {
      res=getCms().readResource(getParamResource(),CmsResourceFilter.ALL);
    }
    hasPermissions=getCms().hasPermissions(res,required,false,CmsResourceFilter.ALL) && OpenCms.getRoleManager().hasRoleForResource(getCms(),CmsRole.ELEMENT_AUTHOR,getCms().getSitePath(res));
  }
 catch (  CmsException e) {
    if (LOG.isInfoEnabled()) {
      LOG.info(e);
    }
  }
  if (!hasPermissions) {
    getSettings().setErrorMessage(errorMessage);
  }
  return hasPermissions;
}
