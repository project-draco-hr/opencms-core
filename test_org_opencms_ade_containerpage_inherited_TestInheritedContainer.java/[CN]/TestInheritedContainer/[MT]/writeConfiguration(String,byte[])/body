{
  String configPath=path;
  CmsObject cms=getCmsObject();
  if (cms.existsResource(configPath)) {
    lock(configPath);
    CmsFile file=cms.readFile(configPath);
    byte[] newContent=data;
    file.setContents(newContent);
    cms.writeFile(file);
  }
 else {
    byte[] newContent=data;
    cms.createResource(configPath,OpenCms.getResourceManager().getResourceType("inheritconfig").getTypeId(),newContent,new ArrayList<CmsProperty>());
  }
}
