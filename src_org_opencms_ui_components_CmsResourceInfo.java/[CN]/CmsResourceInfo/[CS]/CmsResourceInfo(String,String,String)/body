{
  super();
  CmsVaadinUtils.readAndLocalizeDesign(this,null,null);
  m_topText.setValue(title);
  m_topText.addStyleName(ValoTheme.LABEL_BOLD);
  m_topText.addStyleName(ValoTheme.LABEL_TINY);
