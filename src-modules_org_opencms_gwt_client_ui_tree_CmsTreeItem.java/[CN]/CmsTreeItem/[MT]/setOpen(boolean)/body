{
  if (m_open == open) {
    return;
  }
  m_open=open;
  m_styleVar.setValue(open ? CSS.listTreeItemOpen() : CSS.listTreeItemClosed());
  m_opener.setDown(open);
  if (open) {
    for (    Widget widget : m_children) {
      if (widget instanceof CmsSimpleListItem) {
        ((CmsSimpleListItem)widget).updateLayout();
      }
    }
    fireOpen();
  }
}
