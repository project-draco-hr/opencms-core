{
  int index;
  char ch;
  if (preserveSpace) {
    for (index=0; index < text.length(); ++index) {
      ch=text.charAt(index);
      if (ch == '\n' || ch == '\r')       breakLine();
 else       _text.append(ch);
    }
  }
 else {
    for (index=0; index < text.length(); ++index) {
      ch=text.charAt(index);
      if (ch == ' ' || ch == '\f' || ch == '\t' || ch == '\n' || ch == '\r')       printSpace();
 else       _text.append(ch);
    }
  }
}
