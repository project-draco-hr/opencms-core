{
  if (source == null) {
    return null;
  }
  StringBuffer ret=new StringBuffer();
  String enc=encode(source,encoding,true);
  for (int z=0; z < enc.length(); z++) {
    if (enc.charAt(z) == '+') {
      ret.append("%20");
    }
 else {
      ret.append(enc.charAt(z));
    }
  }
  return ret.toString();
}
