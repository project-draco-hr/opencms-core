{
  com.opencms.file.oracleplsql.CmsDbAccess dbAccess=(com.opencms.file.oracleplsql.CmsDbAccess)m_dbAccess;
  validFilename(destination.replace('/','a'));
  CmsResource sourceFile=readFileHeader(currentUser,currentProject,source);
  try {
    if (accessOther(currentUser,currentProject,sourceFile,C_ACCESS_PUBLIC_WRITE) || accessOwner(currentUser,currentProject,sourceFile,C_ACCESS_OWNER_WRITE) || accessGroup(currentUser,currentProject,sourceFile,C_ACCESS_GROUP_WRITE)) {
      dbAccess.copyFile(currentProject,currentUser.getId(),source,destination);
      fileSystemChanged(false);
    }
 else {
      throw new CmsException("[" + this.getClass().getName() + "] "+ source,CmsException.C_NO_ACCESS);
    }
  }
 catch (  CmsException e) {
    throw e;
  }
}
