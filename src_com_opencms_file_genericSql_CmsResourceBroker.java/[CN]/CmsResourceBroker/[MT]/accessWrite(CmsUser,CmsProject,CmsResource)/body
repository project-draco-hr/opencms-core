{
  if (onlineProject(currentUser,currentProject).equals(currentProject)) {
    return (false);
  }
  if (!accessProject(currentUser,currentProject,currentProject.getId())) {
    return (false);
  }
  if (resource.getProjectId() != currentProject.getId()) {
    return false;
  }
  if (!(accessOther(currentUser,currentProject,resource,C_ACCESS_PUBLIC_WRITE) || accessOwner(currentUser,currentProject,resource,C_ACCESS_OWNER_WRITE) || accessGroup(currentUser,currentProject,resource,C_ACCESS_GROUP_WRITE))) {
    return false;
  }
  if (resource.getParent() != null) {
    resource=m_dbAccess.readFolder(currentProject.getId(),resource.getParent());
  }
 else {
    return true;
  }
  do {
    if (accessOther(currentUser,currentProject,resource,C_ACCESS_PUBLIC_WRITE) || accessOwner(currentUser,currentProject,resource,C_ACCESS_OWNER_WRITE) || accessGroup(currentUser,currentProject,resource,C_ACCESS_GROUP_WRITE)) {
      if (resource.isLocked() && (resource.isLockedBy() != currentUser.getId())) {
        return (false);
      }
      if (resource.getParent() != null) {
        resource=m_dbAccess.readFolder(currentProject.getId(),resource.getParent());
      }
    }
 else {
      return (false);
    }
  }
 while (resource.getParent() != null);
  return (true);
}
