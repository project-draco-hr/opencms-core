{
  Locale theLocale=locale;
  if (!m_groupContainers.containsKey(theLocale)) {
    LOG.info(Messages.get().container(Messages.LOG_CONTAINER_PAGE_LOCALE_NOT_FOUND_2,cms.getSitePath(getFile()),theLocale.toString()).key());
    theLocale=Locale.ENGLISH;
    if (!m_groupContainers.containsKey(theLocale)) {
      theLocale=OpenCms.getLocaleManager().getDefaultLocales(cms,getFile()).get(0);
      if (!m_groupContainers.containsKey(theLocale)) {
        LOG.error(Messages.get().container(Messages.LOG_CONTAINER_PAGE_LOCALE_NOT_FOUND_2,cms.getSitePath(getFile()),theLocale).key());
        return null;
      }
    }
  }
  return m_groupContainers.get(theLocale);
}
