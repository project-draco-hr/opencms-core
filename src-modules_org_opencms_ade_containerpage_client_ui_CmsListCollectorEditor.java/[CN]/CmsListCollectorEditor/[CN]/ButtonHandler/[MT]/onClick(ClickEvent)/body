{
  Object source=event.getSource();
  if (source == m_delete) {
    removeHighlighting();
    CmsConfirmDialog dialog=new CmsConfirmDialog("Deleting Resource","You are about to delete a resource from the VFS. Are you sure you want to do that?");
    dialog.setHandler(new I_CmsConfirmDialogHandler(){
      public void onClose(){
        CmsDomUtil.ensureMouseOut(m_delete.getElement());
      }
      public void onOk(){
        deleteElement();
      }
    }
);
    dialog.center();
  }
  if (source == m_edit) {
    openEditDialog(false);
    removeHighlighting();
  }
  if (source == m_new) {
    openEditDialog(true);
    removeHighlighting();
  }
}
