{
  PreparedStatement stmt=null;
  Connection conn=null;
  if (group != null) {
    try {
      conn=m_sqlManager.getConnection(dbc);
      stmt=m_sqlManager.getPreparedStatement(conn,"C_GROUPS_WRITEGROUP");
      stmt.setString(1,group.getDescription());
      stmt.setInt(2,group.getFlags());
      stmt.setString(3,group.getParentId().toString());
      stmt.setString(4,group.getId().toString());
      stmt.executeUpdate();
    }
 catch (    SQLException e) {
      throw new CmsDbSqlException(org.opencms.db.generic.Messages.get().container(org.opencms.db.generic.Messages.ERR_GENERIC_SQL_1,CmsDbSqlException.getErrorQuery(stmt)),e);
    }
 finally {
      m_sqlManager.closeAll(dbc,conn,stmt,null);
    }
  }
 else {
    throw new CmsDbEntryNotFoundException(org.opencms.db.Messages.get().container(org.opencms.db.Messages.ERR_UNKNOWN_GROUP_1,group.getName()));
  }
}
