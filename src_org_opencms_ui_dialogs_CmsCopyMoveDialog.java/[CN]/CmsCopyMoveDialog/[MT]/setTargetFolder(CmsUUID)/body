{
  CmsObject cms=A_CmsUI.getCmsObject();
  CmsResource res=cms.readResource(structureId);
  if (res.isFolder()) {
    m_targetFolder.setValue(cms.getSitePath(res));
  }
 else {
    throw new CmsIllegalArgumentException(Messages.get().container(org.opencms.workplace.commons.Messages.ERR_COPY_MULTI_TARGET_NOFOLDER_1,cms.getSitePath(res)));
  }
}
