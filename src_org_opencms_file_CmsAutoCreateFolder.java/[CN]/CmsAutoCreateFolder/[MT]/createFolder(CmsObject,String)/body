{
  CmsResource result=null;
  try {
    result=cms.readResource(path);
  }
 catch (  CmsVfsResourceNotFoundException e) {
    CmsObject adminSiteCms=OpenCms.initCmsObject(adminCms);
    adminSiteCms.getRequestContext().setCurrentProject(cms.getRequestContext().currentProject());
    adminSiteCms.getRequestContext().setSiteRoot(cms.getRequestContext().getSiteRoot());
    result=adminSiteCms.createResource(path,OpenCms.getResourceManager().getResourceType(CmsResourceTypeFolder.RESOURCE_TYPE_NAME).getTypeId());
  }
  return result;
}
