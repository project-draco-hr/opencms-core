{
  super.onBrowserEvent(event);
switch (DOM.eventGetType(event)) {
case Event.ONMOUSEUP:
    Event.releaseCapture(this.getElement());
  m_capturedMouse=false;
break;
case Event.ONMOUSEDOWN:
Event.setCapture(this.getElement());
m_capturedMouse=true;
case Event.ONMOUSEMOVE:
if (m_capturedMouse) {
DOM.eventPreventDefault(event);
int x=(event.getClientX() - m_colorUnderlay.getAbsoluteLeft()) + 1 + Window.getScrollLeft();
int y=(event.getClientY() - m_colorUnderlay.getAbsoluteTop()) + 1 + Window.getScrollTop();
setSliderPosition(x,y);
if (m_parent != null) {
m_parent.onMapSelected(x,y);
}
}
default :
}
}
