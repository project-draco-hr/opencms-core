{
  try {
    String linkHref=OpenCms.getLinkManager().getServerLink(userCms,"/system/modules/org.opencms.ade.publish/publish.jsp?" + CmsPublishService.PARAM_PUBLISH_PROJECT_ID + "="+ workflowProject.getUuid());
    CmsWorkflowNotification notification=new CmsWorkflowNotification(m_adminCms,userCms,recipient,getNotificationResource(),workflowProject,resources,linkHref);
    notification.send();
  }
 catch (  Throwable e) {
    LOG.error(e.getLocalizedMessage(),e);
  }
}
