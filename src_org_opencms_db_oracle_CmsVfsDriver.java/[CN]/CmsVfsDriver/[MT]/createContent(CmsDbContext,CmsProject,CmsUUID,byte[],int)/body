{
  PreparedStatement stmt=null;
  Connection conn=null;
  try {
    conn=m_sqlManager.getConnection(dbc,project.getId());
    stmt=m_sqlManager.getPreparedStatement(conn,project,"C_ORACLE_CONTENTS_ADD");
    stmt.setString(1,new CmsUUID().toString());
    stmt.setString(2,resourceId.toString());
    stmt.executeUpdate();
  }
 catch (  SQLException e) {
    throw new CmsDbSqlException(org.opencms.db.generic.Messages.get().container(org.opencms.db.generic.Messages.ERR_GENERIC_SQL_1,CmsDbSqlException.getErrorQuery(stmt)),e);
  }
 finally {
    m_sqlManager.closeAll(dbc,conn,stmt,null);
  }
  writeContent(dbc,project,resourceId,content);
}
