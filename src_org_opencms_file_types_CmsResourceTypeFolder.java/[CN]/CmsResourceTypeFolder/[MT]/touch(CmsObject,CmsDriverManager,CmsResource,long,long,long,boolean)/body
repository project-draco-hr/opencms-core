{
  super.touch(cms,driverManager,resource,dateLastModified,dateReleased,dateExpired,recursive);
  if (recursive) {
    List resources=driverManager.readChildResources(cms.getRequestContext(),resource,CmsResourceFilter.ALL,true,true);
    for (int i=0; i < resources.size(); i++) {
      CmsResource childResource=(CmsResource)resources.get(i);
      if (childResource.isFolder()) {
        touch(cms,driverManager,childResource,dateLastModified,dateReleased,dateExpired,recursive);
      }
 else {
        getResourceType(childResource.getTypeId()).touch(cms,driverManager,childResource,dateLastModified,dateReleased,dateExpired,recursive);
      }
    }
  }
}
