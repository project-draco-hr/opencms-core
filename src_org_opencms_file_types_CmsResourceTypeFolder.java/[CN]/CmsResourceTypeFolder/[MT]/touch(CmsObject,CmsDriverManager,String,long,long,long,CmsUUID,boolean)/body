{
  resourcename=validateFoldername(resourcename);
  List resources=cms.getResourcesInFolder(resourcename,CmsResourceFilter.IGNORE_EXPIRATION);
  super.touch(cms,driverManager,resourcename,dateLastModified,dateReleased,dateExpired,user,recursive);
  if (!recursive) {
    return;
  }
  for (int i=0; i < resources.size(); i++) {
    CmsResource res=(CmsResource)resources.get(i);
    String name=cms.readAbsolutePath(res,CmsResourceFilter.IGNORE_EXPIRATION);
    if (res.isFolder()) {
      touch(cms,driverManager,name,dateLastModified,dateReleased,dateExpired,user,recursive);
    }
 else {
      cms.touch(name,dateLastModified,dateReleased,dateExpired,user,recursive);
    }
  }
}
