{
  String value="";
  long total=Runtime.getRuntime().totalMemory() / 1024;
  long free=Runtime.getRuntime().freeMemory() / 1024;
  long used=total - free;
  if (mode == 1) {
    value="" + total;
  }
 else   if (mode == 2) {
    value="" + free;
  }
 else {
    value="" + used;
  }
  return value;
}
