{
  int result=-1;
  try {
    CmsResourceFilter filter=CmsResourceFilter.DEFAULT.addRequireType(resourceTypeId);
    List resources=getCmsObject().readResources(foldername,filter,false);
    result=resources.size();
  }
 catch (  CmsException e) {
    if (LOG.isErrorEnabled()) {
      LOG.error(org.opencms.db.Messages.get().key(org.opencms.db.Messages.ERR_READ_RESOURCES_WITH_TYPE_2,new Integer(resourceTypeId),foldername),e);
    }
    result=-1;
  }
  return result;
}
