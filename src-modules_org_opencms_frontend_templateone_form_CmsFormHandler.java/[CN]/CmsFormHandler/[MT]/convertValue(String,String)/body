{
  if ("html".equalsIgnoreCase(outputType)) {
    value=CmsStringUtil.substitute(value,"\n","<br>");
    value=CmsStringUtil.substitute(value," ","&nbsp;");
  }
 else {
    value=CmsStringUtil.substitute(value,"<br>","\n");
    value=CmsStringUtil.substitute(value,"&nbsp;"," ");
  }
  return value;
}
