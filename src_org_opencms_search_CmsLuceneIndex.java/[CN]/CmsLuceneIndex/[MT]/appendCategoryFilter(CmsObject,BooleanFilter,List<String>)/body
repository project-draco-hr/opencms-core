{
  if ((categories != null) && (categories.size() > 0)) {
    List<String> lowerCaseCategories=new ArrayList<String>();
    for (    String category : categories) {
      lowerCaseCategories.add(category.toLowerCase());
    }
    filter.add(new FilterClause(getMultiTermQueryFilter(I_CmsSearchField.FIELD_CATEGORY,lowerCaseCategories),BooleanClause.Occur.MUST));
  }
  return filter;
}
