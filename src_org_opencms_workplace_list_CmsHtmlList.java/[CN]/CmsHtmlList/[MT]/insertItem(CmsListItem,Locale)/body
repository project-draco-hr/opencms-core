{
  CmsListState state=null;
  if (m_filteredItems != null || m_visibleItems != null) {
    state=getState();
  }
  addItem(listItem);
  if (m_filteredItems != null) {
    m_filteredItems.add(listItem);
  }
  if (m_visibleItems != null) {
    m_visibleItems.add(listItem);
  }
  if (state != null) {
    setState(state,locale);
  }
}
