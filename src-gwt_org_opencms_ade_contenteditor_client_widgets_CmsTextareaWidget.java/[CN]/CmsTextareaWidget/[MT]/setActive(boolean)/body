{
  if (m_active == active) {
    return;
  }
  m_active=active;
  m_textarea.setEnabled(m_active);
  if (m_active) {
    getElement().removeClassName(I_LayoutBundle.INSTANCE.form().inActive());
    getElement().focus();
  }
 else {
    getElement().addClassName(I_LayoutBundle.INSTANCE.form().inActive());
  }
  if (!active) {
    m_textarea.setFormValueAsString("");
  }
  if (active) {
    fireChangeEvent();
  }
}
